<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Profile Settings with modern icons -->
    <PreferenceCategory
        app:title="Profile Settings"
        app:icon="@drawable/ic_account_circle"
        app:allowDividerAbove="true"
        app:allowDividerBelow="true">

        <Preference
            app:key="profile"
            app:title="Edit Profile"
            app:summary="Update your name, email and personal details"
            app:icon="@drawable/ic_edit_profile" />
    </PreferenceCategory>

    <!-- Budget Settings with visual indicators -->
    <PreferenceCategory
        app:title="Budget Management"
        app:icon="@drawable/ic_budget"
        app:allowDividerAbove="true"
        app:allowDividerBelow="true">

        <SwitchPreferenceCompat
            app:key="budget_alerts"
            app:title="Budget Alerts"
            app:summary="Receive notifications when approaching your budget limit"
            app:icon="@drawable/ic_notifications"
            app:defaultValue="true" />

        <SwitchPreferenceCompat
            app:key="daily_reminder"
            app:title="Daily Expense Reminders"
            app:summary="Get friendly daily reminders to track your spending"
            app:icon="@drawable/ic_reminder"
            app:defaultValue="false" />


    </PreferenceCategory>

    <!-- Currency Settings with visual design -->
    <PreferenceCategory
        app:title="Currency &amp; Display"
        app:icon="@drawable/ic_currency_exchange"
        app:allowDividerAbove="true"
        app:allowDividerBelow="true">

        <ListPreference
            app:key="default_currency"
            app:title="Default Currency"
            app:summary="Choose your preferred currency for transactions"
            app:icon="@drawable/ic_money"
            app:defaultValue="USD"
            app:entries="@array/currency_entries"
            app:entryValues="@array/currency_values"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <!-- Data Management with enhanced visuals -->
    <PreferenceCategory
        app:title="Data Management"
        app:icon="@drawable/ic_data"
        app:allowDividerAbove="true"
        app:allowDividerBelow="true">

        <Preference
            app:key="backup_data"
            app:title="Backup Data"
            app:summary="Create a secure backup of your transactions and settings"
            app:icon="@drawable/ic_backup" />

        <Preference
            app:key="restore_data"
            app:title="Restore Data"
            app:summary="Restore your transactions and settings from a backup file"
            app:icon="@drawable/ic_restore" />



    </PreferenceCategory>

    <!-- Account Management section -->
    <PreferenceCategory
        app:title="Account"
        app:icon="@drawable/ic_security"
        app:allowDividerAbove="true">

        <Preference
            app:key="logout"
            app:title="Logout"
            app:summary="Sign out from your account and exit"
            app:icon="@drawable/ic_exit_to_app" />

    </PreferenceCategory>

</PreferenceScreen>